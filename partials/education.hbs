{{#if resume.education.length}}
<section id="education">
	<h2>Education</h2>
	{{#each resume.education}}
	<div class="item">
		{{#if institution}}
		<span class="institution">
			{{institution}}
		</span> |
		{{/if}}
		<span class="date">
			{{#if startDate}}
			<span class="startDate">
				{{startDate}}
			</span>
			{{/if}} {{#if endDate}}
			<span class="endDate">
				- {{endDate}}
			</span>
			{{else}}
			<span class="endDate">
				- Present
			</span>
			{{/if}}
		</span>
		{{#if area}}
		<span class="area">
			{{area}}
		</span> |
		{{/if}} {{#if studyType}}
		<span class="studyType">
			{{studyType}}
		</span> |
		{{/if}} {{#if gpa}}
		<span class="gpa">
			GPA: {{gpa}}
		</span>
		{{/if}} {{!-- no course information exposed yet {{#if courses.length}}
		<ul class="courses">
			{{#each courses}}
			<li>{{.}}</li>
			{{/each}}
		</ul>
		{{/if}} --}}
	</div>
	{{/each}}
</section>
{{/if}}