{{#if resume.work.length}}
<section id="work">
	<h2>Work</h2>
	{{#each resume.work}}
	<div class="item">
		{{#if company}}
		<h3 class="name">
			{{company}}
		</h3>
		{{/if}}
		{{#if position}}
		<div class="position">
			{{position}} |
		{{/if}}
		<span class="date">
			{{#if startDate}}
			<span class="startDate">
				{{startDate}}
			</span>
			{{/if}}
			{{#if endDate}}
			<span class="endDate">
				- {{endDate}}
			</span>
			{{else}}
			<span class="endDate">
				- Present
			</span>
			{{/if}}
		</span> |
				{{#if website}}
		<span class="website">
			<a href="{{website}}">{{website}}</a>
		</span>
		{{/if}}
		</div>
		{{#if summary}}
		<div class="summary">
			<p>{{summary}}</p>
		</div>
		{{/if}}
		{{!-- we don't currently use bullets
		{{#if highlights.length}}
		<ul class="highlights">
			{{#each highlights}}
			<li>{{.}}</li>
			{{/each}}
		</ul>
		{{/if}} --}}
	</div>
	{{/each}}
</section>
{{/if}}